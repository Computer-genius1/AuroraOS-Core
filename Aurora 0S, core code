import SwiftUI

// MARK: - App Entry Point
@main
struct AuroraShellApp: App {
    var body: some Scene {
        WindowGroup {
            ShellView()
        }
    }
}

// MARK: - Shell Root
struct ShellView: View {
    @StateObject private var appManager = AppManager()
    @State private var showStart = true

    var body: some View {
        ZStack {
            Color.black.ignoresSafeArea()

            if let app = appManager.activeApp {
                app.content
                    .transition(.opacity)
                    .zIndex(0)
            }

            if showStart {
                StartView { app in
                    withAnimation(.easeInOut) {
                        appManager.launch(app)
                        showStart = false
                    }
                }
                .transition(.move(edge: .bottom))
                .zIndex(1)
            }
        }
        .simultaneousGesture(
            DragGesture(minimumDistance: 60)
                .onEnded { value in
                    guard abs(value.translation.width) < 40 else { return }

                    if value.translation.height > 90 {
                        withAnimation(.easeInOut) { showStart = true }
                    } else if value.translation.height < -90 {
                        withAnimation(.easeInOut) { showStart = false }
                    }
                }
        )
    }
}

// MARK: - App Manager (Lifecycle + State)
final class AppManager: ObservableObject {
    @Published var activeApp: ShellRunningApp?

    func launch(_ app: ShellApp) {
        if let existing = activeApp, existing.id == app.id {
            return
        }
        activeApp = ShellRunningApp(from: app)
    }
}

// MARK: - App Definitions
struct ShellApp: Identifiable, Hashable {
    let id = UUID()
    let name: String
    let icon: String
    let builder: () -> AnyView
}

struct ShellRunningApp: Identifiable {
    let id: UUID
    let content: AnyView

    init(from app: ShellApp) {
        self.id = app.id
        self.content = app.builder()
    }
}

// MARK: - Start Menu
struct StartView: View {
    let onLaunch: (ShellApp) -> Void

    private let apps: [ShellApp] = [
        ShellApp(
            name: "File Explorer",
            icon: "folder.fill",
            builder: { AnyView(FileExplorerView()) }
        ),
        ShellApp(
            name: "Notes",
            icon: "note.text",
            builder: { AnyView(NotesView()) }
        )
    ]

    var body: some View {
        VStack(alignment: .leading) {
            Text("Start")
                .font(.largeTitle)
                .bold()
                .foregroundColor(.white)
                .padding()

            LazyVGrid(columns: [
                GridItem(.adaptive(minimum: 100), spacing: 16)
            ]) {
                ForEach(apps) { app in
                    Button {
                        onLaunch(app)
                    } label: {
                        VStack(spacing: 12) {
                            Image(systemName: app.icon)
                                .font(.largeTitle)
                                .foregroundColor(.white)

                            Text(app.name)
                                .font(.footnote)
                                .foregroundColor(.white)
                        }
                        .frame(width: 100, height: 100)
                        .background(Color.gray.opacity(0.25))
                        .cornerRadius(14)
                    }
                }
            }
            .padding()

            Spacer()
        }
        .background(Color.black.opacity(0.96))
        .ignoresSafeArea()
    }
}

// MARK: - File Explorer (Stub)
struct FileExplorerView: View {
    private let folders = ["Documents", "Downloads", "Pictures", "Apps", "System"]

    var body: some View {
        VStack(alignment: .leading) {
            Text("File Explorer")
                .font(.title)
                .bold()
                .padding()

            List(folders, id: \.self) { folder in
                Label(folder, systemImage: "folder")
            }
            .scrollContentBackground(.hidden)
        }
        .background(Color.white)
        .ignoresSafeArea()
    }
}

// MARK: - Notes App (State Preserved)
struct NotesView: View {
    @State private var text: String = ""

    var body: some View {
        VStack(alignment: .leading) {
            Text("Notes")
                .font(.title)
                .bold()
                .padding()

            TextEditor(text: $text)
                .padding(8)
                .background(
                    RoundedRectangle(cornerRadius: 10)
                        .fill(Color.gray.opacity(0.1))
                )
                .padding()
        }
        .background(Color.white)
        .ignoresSafeArea()
    }
}

